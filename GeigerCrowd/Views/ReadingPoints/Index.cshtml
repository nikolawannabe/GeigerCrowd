@model IEnumerable<GeigerCrowd.Models.ReadingPoint>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Date
        </th>
        <th>
            Reading
        </th>
        <th>
            Latitude
        </th>
        <th>
            Longitude
        </th>
        <th>
            UserId
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@String.Format("{0:g}", item.Date)
        </td>
        <td>
			@String.Format("{0:F}", item.Reading)
        </td>
        <td>
			@String.Format("{0:0.000000}", item.Latitude)
        </td>
        <td>
			@String.Format("{0:0.000000}", item.Longitude)
        </td>
        <td>
			@item.UserId
        </td>
    </tr>
}

</table>


