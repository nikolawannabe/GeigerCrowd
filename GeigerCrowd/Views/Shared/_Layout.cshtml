<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/api/api.shared.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/api/api.readingpoints.js")" type="text/javascript"></script>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    @RenderSection("Includes",false)
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>Geiger Crowd</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Readings", "Index", "ReadingPoints")</li>
                    <li>@Html.ActionLink("Map", "DefaultMap", "Home")</li>
                </ul>
            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
